#!/bin/bash

# Function to convert from base "water" to decimal
water_to_decimal() {
    local num=$1
    local decimal=0
    local len=${#num}
    local base=5  # base for "water"

    for (( i=0; i<len; i++ )); do
        char="${num:$i:1}"
        case "$char" in
            'g') value=0 ;;
            'v') value=1 ;;
            'c') value=2 ;;
            't') value=3 ;;
            'w') value=4 ;;
        esac
        decimal=$((decimal * base + value))
    done

    echo $decimal
}

# Function to convert from base "stir." to decimal
stir_to_decimal() {
    local num=$1
    local decimal=0
    local len=${#num}
    local base=5  # base for "stir."

    for (( i=0; i<len; i++ )); do
        char="${num:$i:1}"
        case "$char" in
            'r') value=0 ;;
            'i') value=1 ;;
            't') value=2 ;;
            'r') value=3 ;;
            '.') value=4 ;;
            's') value=4 ;;
        esac
        decimal=$((decimal * base + value))
    done

    echo $decimal
}

# Function to convert from decimal to base "bestchol"
decimal_to_bestchol() {
    local num=$1
    local result=""
    local base=5  # base for "bestchol"

    while [ $num -gt 0 ]; do
        remainder=$((num % base))
        result=$(printf "%c" "$((97 + remainder))${result}")
        num=$((num / base))
    done

    echo "$result"
}

# Convert WATER and STIR to decimal
water_decimal=$(water_to_decimal "$WATER")
stir_decimal=$(stir_to_decimal "$STIR")

# Add the decimal values
sum=$((water_decimal + stir_decimal))

# Convert the sum to base "bestchol"
result=$(decimal_to_bestchol "$sum")

echo "$result"
